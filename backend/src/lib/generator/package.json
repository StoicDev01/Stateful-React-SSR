{
  "name": "generators",
  "description" : "A library with various Generators builtin, this includes: Character Generator, Description, Numbers Generator, Name Generator, Markov chain, and much more on the future. ",
  "version": "0.0.1",
  "type": "module",
  "module": "es2022",
  "main": "dist/src/Index.js",
  "keywords": ["Generator", "Character Generator", "Random generators", "Markov chain"],
  "author": "",
  "license": "MIT",
  "tsup": {
    "target": "es2022",
    "format": "esm",
    "outDir" : "dist/src"
  },
  "dependencies": {
    "@types/lodash-es": "^4.17.6",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "tsc": "^2.0.4",
    "tsup": "^6.5.0",
    "tsx": "^3.12.2",
    "typescript": "^4.9.4",
    "vitest": "^0.28.1"
  },
  "scripts": {
    "dev": "tsx --watch src/Index.js",
    "build": "tsup src && tsc --emitDeclarationOnly --declaration",
    "start": "node dist/Index.js",
    "test": "vitest"
  }
}
