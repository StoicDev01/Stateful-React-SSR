{
  "name": "web-generator",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": "18"
  },
  "tsup" : {
    "format" : "esm",
    "target" : "es2022"
  },
  "scripts": {
    "dev": "NODE_ENV=development tsx src/Server.ts",

    "build:frontend": "yarn run build:frontend:client && yarn run build:frontend:server",
    "build:frontend:client": "vite build src/frontend --outDir ../../dist/frontend/client --emptyOutDir",
    "build:frontend:server": "vite build --ssr src/frontend/entry-server.tsx --outDir dist/frontend/server",
    "build:backend" : "tsup src/*.ts src/backend/api src/backend/lib/src --outDir dist",
    "build" : "yarn run build:frontend & yarn run build:backend & wait",

    "generate:frontend": "vite build --outDir dist/static && npm run build:server && node prerender",

    "start": "NODE_ENV=production node dist/Server.js",
    "test": "vitest"
  },
  "repository": "git@github.com:izkeas/TheForge.git",
  "author": "izkeas <izkeasyomito@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@mui/material": "^5.11.5",
    "@vitejs/plugin-react": "3.0.1",
    "body-parser": "^1.20.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "faunadb": "^4.7.1",
    "file-saver": "^2.0.5",
    "glob": "^8.1.0",
    "import-glob": "^1.5.0",
    "lodash-es": "^4.17.21",
    "node-schedule": "^2.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.7.1",
    "react-router-dom": "^6.6.2",
    "serve-static": "^1.15.0",
    "tsc": "^2.0.4",
    "uuid": "^9.0.0",
    "vite": "^4.0.4"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/file-saver": "^2.0.5",
    "@types/glob": "^8.0.1",
    "@types/lodash": "^4.14.191",
    "@types/lodash-es": "^4.17.6",
    "@types/node-schedule": "^2.1.0",
    "@types/react-dom": "^18.0.10",
    "@types/uuid": "^9.0.0",
    "tsup": "^6.5.0",
    "tsx": "^3.12.2",
    "typescript": "^4.9.4",
    "vitest": "^0.28.2"
  }
}
